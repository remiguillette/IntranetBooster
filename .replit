# Configuration de base du module
modules = ["nodejs-20", "web", "bash"]

# Fichiers cachés (inchangé)
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

# Configuration Nix (inchangé)
[nix]
channel = "stable-24_05"

# Configuration des ports
[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5002
externalPort = 3003

[[ports]]
localPort = 5003
externalPort = 3000

[[ports]]
localPort = 5004
externalPort = 3002

[[ports]]
localPort = 5005
externalPort = 5173

[[ports]]
localPort = 5006
externalPort = 4200

[[ports]]
localPort = 5007
externalPort = 5000

[[ports]]
localPort = 5009
externalPort = 3001

# Configuration du déploiement
[deployment]
# Commande pour construire l'application (s'assure que le dossier 'dist' est créé)
build = ["sh", "-c", "npm run build"]
# Commande pour démarrer l'application en production (après la construction)
run = ["sh", "-c", "npm run start"]

# Configuration des workflows
[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build and start application"

[[workflows.workflow]]
name = "Build and start application"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build && npm run start"
waitForPort = 5000